<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title><%= title%></title>
    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/bootstrap/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/stylesheets/shop-homepage.css" rel="stylesheet">

</head>

<body>
<% include ../header.ejs %>

<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <br/>
            <br/>
            <div class="row">
                <%
                if (typeof articleData !== 'undefined'){
                    for(var i=0; i<articleData.length; i++){
                    %>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card">
                            <a href="/article/view/<%= articleData[i].ID %>"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="/article/view/<%= articleData[i].ID %>"><%= articleData[i].ID %>. <%= articleData[i].NAME %></a>
                                </h4>
                                <h5>Price: <%= articleData[i].PRICE %></h5>
                                <p class="card-text">Author: <%= articleData[i].AUTHOR %></p>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                            </div>
                        </div>
                    </div>
                    <%
                    }
                }
                %>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="py-5 bg-dark">
    <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Your Website 2017</p>
    </div>
    <!-- /.container -->
</footer>

<!-- Bootstrap core JavaScript -->
<script src="/javascripts/jquery/jquery.min.js"></script>
<script src="/javascripts/bootstrap/bootstrap.bundle.min.js"></script>

</body>

</html>
